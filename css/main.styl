fade(t)
    opacity 1
    transition: opacity t ease-in-out;
    -moz-transition: opacity t ease-in-out;
    -webkit-transition: opacity t ease-in-out;

.fade_1
    fade(0.75s)

.fade_2
    fade(0.60s)

.fade_3
    fade(0.45s)

.fade_4
    fade(0.25s)

.fade_5
    fade(0.1s)

body
    margin-top 70px
    padding 15px
    font-family Sans-Serif
    background-image url('/grass.jpg')

.new-game-form
    box-shadow 10px 15px 15px
    background-color #fff
    opacity 0.9
    padding 80px
    width 50%
    margin 0 auto
    margin-top 40px
    p
        font-size: 1.5em

.big-container
    box-shadow 10px 15px 15px
    width 100%
    background-color #fff
    opacity 0.9
    padding 15px
    @media(min-width: 1700px)
        width 1700px
        margin 0 auto

.big-fixed-height
    height 600px
    @media(max-width: 1700px)
        height 700px

#main-nav
    padding-right 15px

.inline
    display inline-block
    vertical-align bottom

.play-game
    .chat-container
        height 100%
        width 100%
        .chat
            width 100%
            height 100%
            .messages
                border-left 1px solid #eee
                padding-left 5px
                overflow hidden
                height calc(100% - 94px)
                .chat-message
                    background-color #fafafa
                    padding 2px
                    margin-bottom 5px
                    .username
                        font-weight bold
                    .before-message,.to
                        color orange
                        text-decoration italic
                    .time
                        color #ccc
                    &.oops
                        .message
                            color #400
            .controls
                width 100%

.card-slot,.open-card
    width 70px
    height 100px
    margin 5px
    border-radius 2px
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none

.card-slot
    border 2px dashed #ccc
    display table
    .inside
        display table-row
        .contents
            display table-cell
            vertical-align middle
            text-align center
            color #ccc
            font-size 2em
    &.dragged-over
        border 2px dashed #777
        background-color #eee
        .contents
            color #777
            font-size 2.5em

.open-card
    border 1px solid #ccc
    box-shadow 2px 2px 5px #ccc
    table
        width 100%
        height 100%
        td
            vertical-align middle
            text-align center
        .small-number
            font-size 0.7em
            margin 3px
        .big-number
            font-size 1.7em
        .vachettes
            text-decoration underline
    &.vachettes_1
        background-color #E7FAE7
    &.vachettes_2
        background-color #DAFBFF
    &.vachettes_3
        background-color #FFF7FA
    &.vachettes_5
        background-color #FFE2E2
    &.vachettes_7
        background-color #FDC8C8

.hand-of-cards-container
    .open-card
        cursor pointer

.player
    height 32px
    vertical-align bottom
    display inline-block
    margin-right 5px
    &.their-turn
        .name
            font-size 1.5em
            color orange
    .name
        font-weight bold
        color #666
    table
        height 100%
    td
        vertical-align middle
        padding-left 3px
        padding-right 3px

.splash
    position absolute
    background-color rgba(255,65,0,0.9)
    visibility hidden
    td
        text-align center
        font-size 3em
    &.fade
        fade(0.75s)
