body
    margin-top 50px
    padding 15px

.new-game-form
    width 50%
    margin 0 auto
    margin-top 40px
    p
        font-size: 1.5em

#main-nav
    padding-right 15px

.open-card
    display inline-block
    width 70px
    height 100px
    border 2px solid #ccc
    border-radius 5px
    margin 5px
    padding 5px
    box-shadow 2px 2px 5px #ccc
    background-color aliceblue
    .rows
        height 100%
        display flex
        flex-direction column
        .top,.bottom,.middle
            display flex
            flex-grow 1
            justify-content: space-around
        .left,.right,.center
            flex-grow 1
            margin auto
            text-align center
        .vachette
            font-weight bold
            text-decoration underline
    &.vachettes_1
        background-color #E7FAE7
    &.vachettes_2
        background-color #DAFBFF
    &.vachettes_3
        background-color #FFF7FA
    &.vachettes_5
        background-color #FFE2E2
    &.vachettes_7
        background-color #FDC8C8
